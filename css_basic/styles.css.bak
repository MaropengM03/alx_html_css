/* Make the body a column flex container */
body {
  display: flex;
  flex-direction: column;
  height: 100vh;
  margin: 0;
}

/* Make the <main> a row flex container */
main {
  display: flex;
  flex-direction: row;
  flex: auto;
}

/* Make <article> take 2/3 of the width */
article {
  flex: 2;
  overflow-y: auto;
  padding: 1rem;
}

/* Make <aside> take 1/3 of the width */
aside {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

/* Optional: style header and footer */
header, footer {
  padding: 1rem;
  background-color: #f0f0f0;
}
